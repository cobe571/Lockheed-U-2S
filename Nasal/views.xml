<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -35 </chase-distance-m>

  <view n="100">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> 0.00000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y"> 5.85824 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 8.30179 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg>
    </config>
  </view>

  <!-- Scope View -->
  <view n="101">
    <name>Drift Scope View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <default-field-of-view-deg> 30 </default-field-of-view-deg>
      <x-offset-m archive="y">  0.00 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  0.63 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -6.60 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -90 </pitch-offset-deg>
      <!-- <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m> -->
    </config>
  </view>

  <view n="0">
    <name>Pilote</name>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  0.00000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  2.08130 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -5.69134 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -18 </pitch-offset-deg>
      <default-field-of-view-deg> 70 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

</PropertyList>
